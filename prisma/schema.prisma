// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Device {
  id          Int               @id @default(autoincrement())
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  name        String
  description String?
  telemetry   Telemetry[]
  connection  DeviceConnection?
}

model Telemetry {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  deviceID  Int
  device    Device   @relation(fields: [deviceID], references: [id])
  name      String
  type      String
  value     String
}

model MQTTSubscriptions {
  id                 Int               @id @default(autoincrement())
  topic              String
  name               String
  type               String
  DeviceConnection   DeviceConnection? @relation(fields: [deviceConnectionId], references: [id])
  deviceConnectionId Int?
}

model DeviceConnection {
  id                 Int                 @id @default(autoincrement())
  deviceID           Int                 @unique
  device             Device              @relation(fields: [deviceID], references: [id])
  typeID             Int
  type               ConnectionType      @relation(fields: [typeID], references: [id])
  connectionString   String?
  mqtt_subscriptions MQTTSubscriptions[]
}

model ConnectionType {
  id               Int                @id @default(autoincrement())
  name             String
  DeviceConnection DeviceConnection[]
}
